{
    "swagger": "2.0",
    "info": {
      "version": "1.0.0",
      "title": "MyDairy API",
      "description": "MyDiary API is an API that allows user to create an online journal where users can pen down their thoughts and feelings."
    },
    "schemes": [
      "https"
    ],
    "host": "sulenchy-my-diary.herokuapp.com",
    "basePath": "/api/v1",
    "paths": {
      "/entries": {
        "get": {
          "summary": "Gets some diary entries",
          "description": "Returns a list containing all entries for the user.",
          "responses": {
            "200": {
              "description": "A list of entries",
              "schema": {
                "type": "array",
                "items": {
                  "required": [
                    "title",
                    "content"
                  ],
                  "properties": {
                    "title": {
                      "type": "string"
                    },
                    "content": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/entries/:id": {
        "get": {
          "summary": "Gets a diary entry",
          "description": "Returns an object containing an entry for the user.",
          "parameters": [
            {
              "name": "id",
              "in": "query",
              "description": "ID of the entry",
              "type": "integer"
            }
          ],
          "responses": {
            "200": {
              "description": "An entries",
              "schema": {
                "type": "object",
                "items": {
                  "required": [
                    "id"
                  ],
                  "properties": {
                    "title": {
                      "type": "string"
                    },
                    "content": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }